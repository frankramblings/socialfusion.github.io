{
  "manifest_version": 3,
  "name": "Transparent Classroom Mobile Skin",
  "version": "1.0",
  "description": "A mobile-friendly interface for Transparent Classroom",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://*.transparentclassroom.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.transparentclassroom.com/*"],
      "js": ["content.js"],
      "css": ["mobile-style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["mobile-app.js", "mobile-style.css", "icons/*"],
      "matches": ["https://*.transparentclassroom.com/*"]
    }
  ]
}